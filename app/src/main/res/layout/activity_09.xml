<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/miku"
    tools:context=".Activity_09">

    <!-- 顶部标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实验9--数据存储实验"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 功能按钮1：存储用户名 -->
    <Button
        android:id="@+id/btn_to_0901"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="#2196F3"
        android:text="存储用户名"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 功能按钮2：增加试题入库 -->
    <Button
        android:id="@+id/btn_to_0902"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="#4CAF50"
        android:text="增加试题入库"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_0901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部返回主页面按钮 -->
    <Button
        android:id="@+id/btnToMain"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="#F44336"
        android:text="返回主页面"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>