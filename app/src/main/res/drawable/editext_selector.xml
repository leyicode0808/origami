<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. 输入框获取焦点时的样式（高亮边框+轻微背景色） -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- 边框：蓝色、2dp宽度 -->
            <stroke
                android:width="2dp"
                android:color="#2196F3" /> <!-- 经典蓝，可替换为你需要的颜色 -->
            <!-- 背景：浅灰色填充（避免透明导致与页面融合） -->
            <solid android:color="#F5F5F5" />
            <!-- 圆角：8dp（柔和边角，可调整数值） -->
            <corners android:radius="8dp" />
            <!-- 内边距：左右10dp（避免文字紧贴边框） -->
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

    <!-- 2. 输入框默认状态（未获取焦点） -->
    <item>
        <shape android:shape="rectangle">
            <!-- 边框：浅灰色、1dp宽度（比焦点状态细，区分层级） -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- 浅灰，可替换 -->
            <!-- 背景：白色填充（与页面背景区分） -->
            <solid android:color="#FFFFFF" />
            <!-- 圆角：与焦点状态一致，保持视觉统一 -->
            <corners android:radius="8dp" />
            <!-- 内边距：与焦点状态一致，保证文字位置统一 -->
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>