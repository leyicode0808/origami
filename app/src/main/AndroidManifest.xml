<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 相机权限（必须） -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 存储权限：Android 13+ 视频访问权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" android:minSdkVersion="33" />
    <!-- 存储权限：Android Q以下（API≤28）文件访问权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <!-- 存储写入权限：仅Android Q以下需要 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- 声明相机功能（过滤无相机的设备，required=true 表示必须有相机才能安装） -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Origami"
        android:usesCleartextTraffic="true">

        <!-- FileProvider 配置（Android 7.0+ 文件共享必须，修复标签闭合问题） -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.origami.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!-- 修复：meta-data 必须嵌套在 provider 内部 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 主Activity（必须exported=true，因为是 launcher 入口） -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 被 MainActivity 跳转的目标 Activity（exported=true） -->
        <activity android:name=".Activity_01" android:exported="true" />
        <activity android:name=".Activity_02" android:exported="true" />
        <activity android:name=".Activity_02_01" android:exported="false" /> <!-- 子页面，仅被Activity_02跳转 -->
        <activity android:name=".Activity_02_02" android:exported="false" /> <!-- 子页面 -->

        <activity android:name=".Activity_06" android:exported="true" />
        <activity android:name=".Activity_06_01" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_06_02" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_06_03" android:exported="false" /> <!-- 子页面 -->

        <activity android:name=".Activity_08" android:exported="true" />
        <activity android:name=".Activity_09" android:exported="true" />
        <activity android:name=".Activity_09_01" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_09_02" android:exported="false" /> <!-- 子页面 -->

        <activity android:name=".Activity_11" android:exported="true" />
        <activity android:name=".Activity_11_01" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_11_02" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_11_03" android:exported="false" /> <!-- 子页面 -->

        <activity android:name=".Activity_12" android:exported="true" />
        <activity android:name=".Activity_12_01" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_12_02" android:exported="false" /> <!-- 子页面 -->
        <activity android:name=".Activity_12_03" android:exported="false" /> <!-- 子页面 -->

        <!-- 广播接收器（有intent-filter，必须exported=true） -->
        <receiver
            android:name=".Activity_08_AnswerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.origami.SUBMIT_ANSWER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>